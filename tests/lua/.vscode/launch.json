{
  "configurations": [
    {
      "type": "luau",
      "request": "launch",
      "name": "launch luau debugger",
      "program": "${workspaceFolder}/main.lua",
      "port": 58000
    },
    {
      "type": "luau",
      "request": "attach",
      "name": "attach to luau debugger",
      "address": "localhost",
      "port": 58000
    },
    {
      "type": "luau",
      "request": "attach",
      "name": "attach with source map",
      "address": "localhost",
      "port": 58000,
      "sourceMap": {
        "E:/test": "${workspaceFolder}"
      }
    },
    {
      "type": "luau",
      "request": "attach",
      "name": "attach to Android",
      "address": "10.1.110.211",
      "port": 58000,
      "sourceMap": {
        "/sdcard/luau-debugger": "${workspaceFolder}",
        "/storage/emulated/0/luau-debugger": "${workspaceFolder}"
      }
    }
  ]
}